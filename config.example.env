# OpenAI 配置（用于实体关系提取）
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1  # 可选，用于自定义端点
OPENAI_MODEL=gpt-4  # 或 gpt-3.5-turbo

# Neo4j 配置（用于知识图谱）
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password

# Ollama 配置（用于向量化）
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# Coze 配置（用于 AI 工作流，可选）
COZE_API_KEY=pat_xxxxxxxxxxxxx  # 从 Coze 平台获取
COZE_BASE_URL=https://api.coze.cn  # 默认值，通常无需修改
COZE_WORKFLOW_ID=7562785533798547507  # 可选，默认工作流 ID

# 数据库配置
DATABASE_URL=sqlite:///./data/rag_system.db

# 服务器配置
HOST=0.0.0.0
PORT=8000
DEBUG=True

# 文档处理配置
MAX_PROCESSING_WORKERS=4  # 最大后台处理线程数

